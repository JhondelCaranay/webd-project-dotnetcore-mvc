        @* loop to models using for loop *@

        @for (int i = 0; i < Model.Count(); i++)
        {
            <tr>
                <td>
                    @(i+1)
                </td>
                <td>
                    @Model[i].Name
                </td>
                <td>
                    @Model[i].Description
                </td>
                <td>
                    @Model[i].Price
                </td>
                <td>
                    @Model[i].CategoryName
                </td>
                <td>
                    <img src="@Model[i].ImageUrl" class="coverphoto" />
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@Model[i].Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@Model[i].Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@Model[i].Id">Delete</a>
                </td>
            </tr>
        }


    </tbody>
